package mypack
public class airthmatic
{
public int add(int a,int b)
{
return(a+b);
}
public int sub(int a,int b)
{
return(a-b);
}
public int mul(int a,int b)
{
return(a*b);
}
public int div(int a,int b)
{
return(a%b);
}
public int modulus(int a,int b)
{
return(a/b);
}
import java.util.scanner;
import mypack.arithmatic
class test
{
public static void main(String args[])
{
int x,y,ch;
arithmatic p=new arithmatic();
Scanner s=new Scanner(System.in);
System.out.println("enter 2 integers");
x=s.nextInt();
y=s.nextInt();
do
{
System.out.println("\n1.add2.sub\n.3.mul\n4.div\n5.mod\n6.exit\n enter u choice");
ch=s.next Int();
switch(ch)
{
case1:System.out.println("sum="+p.add(x,y));
break;
case2:System.out.println("diff="+p.sub(x,y);
break;
case3:System.out.println("product="+p.mul(x,y);
break;
case4:System.out.println("division="+p.div(x,y);
break;
case5:System.out.println("modulus="+p.mod(x,y);
break;
}
}
while(ch!=0)
}
}

